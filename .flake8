[flake8]
max-line-length = 100
extend-ignore = E203, W503
exclude =
    .git,
    __pycache__,
    venv,
    .venv,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .coverage,
    htmlcov,
    models,
    outputs,
    checkpoints
    node_modules,
    web/node_modules,
    scripts,
    migrations,
    server/bug_reports,
    server/routes/bug_reports.py,
    tests/backend/test_bug_report_agent_manager.py,
    tests/backend/test_bug_reports.py,
per-file-ignores =
    __init__.py:F401
max-complexity = 40
