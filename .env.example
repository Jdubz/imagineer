# Example environment variables for Imagineer
# Copy this file to:
# - .env.production (for production deployment)
# - .env (for local development)

# ============================================================================
# Flask Configuration
# ============================================================================

# Environment (production or development)
FLASK_ENV=production
FLASK_DEBUG=false
FLASK_RUN_PORT=10050

# ============================================================================
# Security Configuration
# ============================================================================

# Allowed CORS origins (comma-separated)
ALLOWED_ORIGINS=https://imagineer.joshwentworth.com,https://imagineer-api.joshwentworth.com,https://imagineer-generator.web.app,https://imagineer-generator.firebaseapp.com

# Verify requests come through Cloudflare
CLOUDFLARE_VERIFY=true

# ============================================================================
# Rate Limiting
# ============================================================================

RATELIMIT_ENABLED=true
RATELIMIT_STORAGE_URI=memory://

# ============================================================================
# Logging
# ============================================================================

LOG_LEVEL=INFO
LOG_FILE=/app/logs/api.log

# ============================================================================
# Google OAuth Configuration (Backend - for Authentication)
# ============================================================================
# Required for Google OAuth authentication
# Get credentials from Google Cloud Console:
# https://console.cloud.google.com > APIs & Services > Credentials
#
# Authorized redirect URIs to add:
# - https://imagineer-api.joshwentworth.com/api/auth/google/callback (production)
# - http://localhost:10050/api/auth/google/callback (for local dev)
#
# IMPORTANT: Must use HTTPS in production and include /api/ prefix!

# Google OAuth Client ID
GOOGLE_CLIENT_ID=your_client_id_here

# Google OAuth Client Secret (DO NOT commit this!)
GOOGLE_CLIENT_SECRET=your_client_secret_here

# Flask Secret Key (for session encryption)
# Generate with: python3 -c "import secrets; print(secrets.token_hex(32))"
FLASK_SECRET_KEY=generate_a_secret_key_here

# ============================================================================
# Model Configuration (Optional)
# ============================================================================

# Hugging Face Token (optional, for accessing gated models)
# Get your token from: https://huggingface.co/settings/tokens
# HF_TOKEN=your_huggingface_token_here

# Model cache directory (optional)
# HF_HOME=/path/to/model/cache

# Device to use (optional, auto-detected if not set)
# Options: cuda, cpu, mps
# DEVICE=cuda

# Mixed precision training (optional)
# Options: no, fp16, bf16
# MIXED_PRECISION=fp16
