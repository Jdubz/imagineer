          "id": { "type": "integer" },
          "filename": { "type": "string" },
          "thumbnail_path": { "type": ["string", "null"] }
        },
        "required": ["id", "filename"]
      }
    },
    "lora_count": {
      "type": "integer"
    },
    "slug": {
      "type": "string"
    },
    "images": {
      "type": "array",
      "items": {
        "type": "object"
      }
    },
    "source_type": {
      "type": ["string", "null"]
    },
    "source_id": {
      "type": ["integer", "null"]
    },
    "total_images": {
      "type": "integer",
      "description": "Total image count (training endpoints only)"
    },
    "labeled_images": {
      "type": "integer",
      "description": "Count of images with caption labels (training endpoints only)"
    },
    "ready_for_training": {
      "type": "boolean",
      "description": "Whether album has enough labeled images for training (training endpoints only)"
    }
  },
  "required": [
    "id",
    "name",
    "album_type",
    "is_public",
    "image_count",
    "is_set_template",
    "template_item_count",
    "template_items_preview",
    "lora_count",
    "slug"
